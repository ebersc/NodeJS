<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <h1 class="mt-2">Perguntas</h1>
        <hr>
        <a href="/perguntar" class="btn btn-primary mb-3">Perguntar</a>
        <% perguntas.forEach(pergunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>" class="btn btn-primary">Responder</a>
                </div>
            </div>
        <% }) %>

    </div>
</body>
<%- include('partials/footer.ejs') %>